generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String?
  password    String
  submissions Submission[]
  createdAt   DateTime     @default(now())
}

model Submission {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  email     String
  userId    Int?     // Optional for guest submissions (if allowed)
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
